{
	"compilerOptions": {
		"strict": true,
		"target": "es6",
		"module": "esnext",
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"baseUrl": "./",
		"rootDir": "./src",
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"tsc-alias": {
		"resolveFullPaths": true,
		"verbose": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
